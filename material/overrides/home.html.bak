{% extends "base.html" %}

{% block extrahead %}

  {{ super() }}

  <style>
    article.md-content__inner.md-typeset {
      display: flex;
      flex-direction: column; /* Stack children vertically */
    }

    article.md-content__inner.md-typeset > h1:first-of-type {
      order: 1 !important; /* After banner */
      margin-top: 1.5em; /* Add some space above H1 if banner is present */
      display: none; /* NOTE: display logo instead of header */
    }

    /* Hide the content button on the homepage */
    .md-content__button.md-icon {
      display: none;
    }

    /* The .logo-image-wrapper DIV */
    .logo-image-wrapper {
      order: 2 !important; /* After the first H1 */
      display: flex; /* Use flex to center the image */
      justify-content: center; /* Center horizontally */
      width: 100%; /* Wrapper takes full width */
      margin-top: 1em; /* Space above the logo */
      margin-bottom: 1.5em; /* Space below the logo */
    }

    /* Styles for the actual logo <img> tag */
    .logo-image-wrapper > .logo-image {
      display: block; /* Good practice for images */
      max-width: 25%; /* Ensure logo is responsive if needed */
      height: auto; /* Maintain aspect ratio */
    }

    /* Remove spacing, as we cannot hide it completely */
    .md-main__inner {
      margin: 0;
    }
  </style>

{% endblock %}
